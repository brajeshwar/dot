[grep]
    lineNumber = true

[url "git@github.com:"]
    insteadOf = https://github.com/

[alias]
    amend = !git add -A && git commit --amend --no-edit
    c     = !git add -A && git commit -m
    caa   = commit -a --amend -C HEAD
    co    = checkout
    fo    = fetch origin --prune
    lg    = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit
    pullm = pull --rebase origin main
    pushm = push origin main
    s     = status -sb
    sign  = !git add -A && git commit -S -m
    undo  = reset --soft HEAD^

[color]
    ui = true

[merge]
    stat = true
    log = true

[mergetool]
    keepBackup = true
    prompt = false

[init]
    defaultBranch = main

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true