# ---------------------------------
# Minimal environment (always loaded)
# ---------------------------------

# Home directory
export HOME="${HOME:-/Users/brajeshwar}"

# Node Version Manager (env only â€” no sourcing here)
export NVM_DIR="$HOME/.nvm"

# pipx / user binaries
if [ -d "$HOME/.local/bin" ]; then
  PATH="$HOME/.local/bin:$PATH"
fi

# personal tools
if [ -d "$HOME/_root/tools" ]; then
  PATH="$HOME/_root/tools:$PATH"
fi

export PATH