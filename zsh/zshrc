# ---------------------------------
# Prompt (clean, simple, minimal)
# ---------------------------------
PROMPT='%{%F{red}%}%~ %{%F{yellow}%}% › %{%F{reset_color}%}%'

# ---------------------------------
# GPG (interactive only)
# ---------------------------------
export GPG_TTY=$(tty)
gpgconf --launch gpg-agent

# ---------------------------------
# rbenv (interactive only)
# ---------------------------------
if command -v rbenv >/dev/null; then
  eval "$(rbenv init - zsh)"
fi

# ---------------------------------
# nvm (interactive only — optional)
# ---------------------------------
if [ -s "$NVM_DIR/nvm.sh" ]; then
  . "$NVM_DIR/nvm.sh"
fi

# ---------------------------------
# Shell behavior
# ---------------------------------
setopt autocd
setopt correct
setopt hist_ignore_dups

HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history

# ---------------------------------
# PATH additions
# ---------------------------------
export PATH="$PATH:/Users/brajeshwar/.lmstudio/bin"
