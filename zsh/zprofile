# Shared environment
[ -f "$HOME/.env" ] && . "$HOME/.env"

# Lazy nvm (zsh-specific)
export NVM_DIR="$HOME/.nvm"

nvm() {
  unset -f nvm node npm npx
  [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
  nvm "$@"
}

node() { nvm; node "$@"; }
npm()  { nvm; npm "$@"; }
npx()  { nvm; npx "$@"; }

# Created by `pipx` on 2025-12-17 07:45:50
export PATH="$PATH:/Users/brajeshwar/.local/bin"
